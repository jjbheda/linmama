<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BothMatch"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_taking"
        style="@style/ToolBarTakingStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nearly_tv"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/select_date"
                    android:background="#2BAF2B"
                    android:gravity="center"
                    android:text="近两日"
                    android:textColor="@color/commonWhile"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/select_date"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/commonWhile"
                    android:textColor="@color/menu_grey"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/icon_taking_search"
                    android:text="选择日期" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_taking_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/icon_search" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <com.linmama.dinning.widget.GetMoreListView
        android:id="@+id/lvSearchOrderLt"
        style="@style/OrderListStyle" />
</LinearLayout>