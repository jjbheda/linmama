<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BothMatch"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_taking"
        style="@style/ToolBarTakingStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nearly_tv"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/select_date"
                    android:background="#2BAF2B"
                    android:gravity="center"
                    android:text="近两日"
                    android:textColor="@color/commonWhile"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/select_date"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/lt_taking_search"
                    android:background="@color/commonWhile"
                    android:gravity="center"
                    android:text="选择日期"
                    android:textColor="@color/menu_grey"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lt_taking_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_search" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <View style="@style/LineViewSingle" />

    <TextView
        android:id="@+id/date_selected_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F5F5F5"
        android:gravity="right|center_vertical"
        android:paddingRight="15dp"
        android:text="2017-11-08 至 2017-11-09"
        android:textColor="#999999"
        android:textSize="16sp"
        android:visibility="gone" />

    <View style="@style/LineViewSingle" />
    <LinearLayout
        android:background="#f5f5f5"
       android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/tv_refundment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="right"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:text="退款未成功"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
    </LinearLayout>

    <View style="@style/LineViewSingle" />
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/ptr_complete"
        style="@style/BothMatch"
        android:background="@color/colorSettingBg">
    <com.linmama.dinning.widget.GetMoreListView
        android:id="@+id/lvSearchOrderLt"
        style="@style/OrderListStyle" />
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
</LinearLayout>