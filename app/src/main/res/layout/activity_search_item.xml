<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    style="@style/BothMatch"
    android:orientation="vertical">

    <LinearLayout
        style="@style/ToolBarStyle"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_back" />

        <com.linmama.dinning.widget.ClearEditText
            android:id="@+id/etSearch"
            style="@style/ClearEditText"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="@string/goods_search_item"
            android:textColorHint="#999999"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#666666"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:enabled="false"
            android:text="@string/goods_search"
            android:textColor="#666666"
            android:textSize="16sp" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/goods_search_noresult"
        android:gravity="center"
        android:textColor="@color/colorLoginEdit"
        android:textSize="16sp" />
</LinearLayout>