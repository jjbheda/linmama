<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    >

    <LinearLayout
        style="@style/MatchWrap"
        android:background="@android:color/white"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#F5F5F5"
            android:paddingRight="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/table_num"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@mipmap/table_num"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/background_holo_light"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/parcel_iv"
                android:layout_toRightOf="@+id/table_num"
                android:gravity="center_vertical"

                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/tv_order_status"
                    style="@style/BothWrap"
                    android:layout_marginBottom="5dp"
                    android:text="等待处理"
                    android:textColor="#E51C23"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/order_time"
                    style="@style/BothWrap"
                    android:text="下单时间 05-21 15:25"
                    android:textColor="#626262"
                    android:textSize="16sp"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/parcel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@mipmap/parcel"
                />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#B1AB4E"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/guest_msg_lt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/image_rt_add"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="刘文辉"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/order_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="送达时间 05-21 15:25"
                            android:textColor="#7C9C3C"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="第一次下单"
                        android:textColor="#999999"
                        android:textSize="16sp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/image_rt_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >

                    <ImageView
                        android:id="@+id/address_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/address_iv"/>

                    <ImageView
                        android:id="@+id/phone_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/phone_iv"/>


                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_delivery_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:maxLines="3"
                android:text="北京市建国路88号北京市建国路88号北京市建国路88号北京市建国路88号"
                android:textColor="#333333"
                android:textSize="16sp"
                />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#999999"
            />

        <LinearLayout
            android:id="@+id/goods_msg_lt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="商品（2）"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/icon_up"
                    android:gravity="center_vertical"
                    android:text="收起 "
                    android:textColor="#57A956"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:id="@+id/icon_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_up"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/notes_msg_lt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_remark"
                    style="@style/TextViewNewOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="备注：按时送达，晚了单位没人了"/>

                <TextView
                    android:id="@+id/tv_invoice_title"
                    style="@style/TextViewNewOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="发票：北京未来时光科技有限公司"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_msg_lt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/TextViewNewOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="西红柿鸡蛋"/>

                    <TextView
                        style="@style/TextViewNewOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="X1"/>

                    <TextView
                        style="@style/TextViewNewOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="23.00"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/TextViewNewOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="米饭"/>

                    <TextView
                        style="@style/TextViewNewOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="X1"/>

                    <TextView
                        style="@style/TextViewNewOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="23.00"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        style="@style/TextViewNewOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="餐盒"/>

                    <TextView
                        style="@style/TextViewNewOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="X1"/>

                    <TextView
                        style="@style/TextViewNewOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="23.00"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/LineView"
            />

        <LinearLayout
            android:id="@+id/discount_msg_lt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                style="@style/TextViewNewOrderNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_delivery_fee"
                    style="@style/TextViewNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="配送费"/>

                <TextView
                    style="@style/TextViewNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="23.00"/>

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/LineView"
            />

        <LinearLayout
            android:id="@+id/other_msg_lt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                style="@style/TextViewNewOrderNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_full_minus_amount"
                    style="@style/TextViewNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="满20元立减2元"/>

                <TextView
                    style="@style/TextViewNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="-2.00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="商家代金券抵扣"/>

                <TextView
                    style="@style/TextViewNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="-2.00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/TextViewNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="商家代金券抵扣"/>

                <TextView
                    style="@style/TextViewNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="-2.00"/>

            </LinearLayout>
        </LinearLayout>


        <View
            style="@style/LineView"
            />

        <LinearLayout
            android:id="@+id/payment_msg_lt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pay_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="顾客实付"
                  style="@style/TextViewNewOrderNotes"/>

                <TextView
                    style="@style/TextViewNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="-2.00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="本单预计收入"
                    android:textColor="#333333"
                    android:textSize="14sp"/>

                <TextView
                    style="@style/TextViewNewOrder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="【已支付】"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="25.50"
                    android:textColor="#F0503B"/>

            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/LineView"
            />

        <LinearLayout
            android:id="@+id/order_num_msg_lt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_serial_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单号：10000993"
                style="@style/TextViewNewOrderNotes"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/btnNewCancel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@mipmap/icon_cancel_bg"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#C2C0C2"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/btnNewTake2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@mipmap/icon_commit_bg"
                    android:gravity="center"
                    android:text="确认订单"
                    android:textColor="#C2C0C2"
                    android:textSize="16sp"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>