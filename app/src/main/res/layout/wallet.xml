<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BothMatch"
    android:background="#e4e4e4"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar style="@style/ToolBarStyle">

        <TextView
            style="@style/ToolBarTitleStyle"
            android:text="@string/wallet" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/shop_name"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/baobao"
            />

        <TextView
            android:id="@+id/turnover_tag"
            style="@style/TextViewSaleParseGreyCommon"
            android:layout_below="@+id/shop_name"
            android:text="东东包(东关店)"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/today_turnover"
            style="@style/TextViewSaleParseGreyCommon"
            android:text="钱包余额"
            android:textSize="16sp"
            android:layout_below="@+id/turnover_tag"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/yestoday_turnover"
            style="@style/TextViewSaleParse14sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/today_turnover"
            android:text="￥ 0.00"
            android:textColor="#333333"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/applycash"

            />

        <TextView
            style="@style/TextViewOrderDetailGreyNoMargin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="申请提现"/>

    </LinearLayout>

    <View
       style="@style/LineViewSingle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/transaction_details"

            />

        <TextView
            style="@style/TextViewOrderDetailGreyNoMargin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="交易明细"/>

    </LinearLayout>


</LinearLayout>